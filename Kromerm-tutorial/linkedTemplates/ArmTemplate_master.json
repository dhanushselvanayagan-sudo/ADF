{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "Kromerm-tutorial"
		},
		"AzureSql_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSql_LS'"
		},
		"AzureSynapseAnalytics_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSynapseAnalytics_LS'"
		},
		"BlobDestination_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'BlobDestination_LS'"
		},
		"DataBlobStorage_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DataBlobStorage_LS'"
		},
		"Logging_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Logging_LS'"
		},
		"Radio_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Radio_LS'"
		},
		"SQL_DB_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQL_DB_LS'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "Kromerm-tutorial_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSql_LS_connectionString": {
						"value": "[parameters('AzureSql_LS_connectionString')]"
					},
					"AzureSynapseAnalytics_LS_connectionString": {
						"value": "[parameters('AzureSynapseAnalytics_LS_connectionString')]"
					},
					"BlobDestination_LS_connectionString": {
						"value": "[parameters('BlobDestination_LS_connectionString')]"
					},
					"DataBlobStorage_LS_connectionString": {
						"value": "[parameters('DataBlobStorage_LS_connectionString')]"
					},
					"Logging_LS_connectionString": {
						"value": "[parameters('Logging_LS_connectionString')]"
					},
					"Radio_LS_connectionString": {
						"value": "[parameters('Radio_LS_connectionString')]"
					},
					"SQL_DB_LS_connectionString": {
						"value": "[parameters('SQL_DB_LS_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "Kromerm-tutorial_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'Kromerm-tutorial_ArmTemplate_0')]"
			]
		}
	]
}